<ion-header kind="light">Header</ion-header>
<ion-content header=true footer=true padding>
  <ion-button kind="positive" block full>ohai</ion-button>
  <ion-list>
    <ion-checkbox>
      Flux Capacitor
    </ion-checkbox>
    <ion-toggle>
      Web Components
    </ion-toggle>
    <ion-radio>Yass. Choose meow</ion-radio>

    <ion-item complex icon-left icon-right as |section|>
      {{#if section.link}}
        {{ion-icon "chatbubble-working"}}
          Call Ma
        {{ion-icon "chatbubble-working"}}
      {{/if}}
    </ion-item>

    {{#each model.items as |item|}}
    <ion-item complex avatar icon-right remove-animate right-editable as |section|>
      {{#if section.link}}
        <img src={{item.face}}>
        <h2>{{item.name}}</h2>
        <p>{{item.lastText}}</p>
        <i class="icon ion-chevron-right icon-accessory"></i>
      {{else if section.options}}
        <ion-option-button click={{action 'edit' item}} kind="positive">
          Edit This
        </ion-option-button>
        <ion-option-button  click={{action 'destroy' item}} kind="assertive">
          Destroy
        </ion-option-button>
      {{/if}}
    </ion-item>
    {{/each}}
  </ion-list>
</ion-content>
<ion-footer kind="light">Footer</ion-footer>
